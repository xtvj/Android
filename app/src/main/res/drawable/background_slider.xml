<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:startColor="#2D3A6D"
                android:endColor="#2D3A6D"
                android:centerColor="#86DEFC"
                android:type="linear" />
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <solid android:color="#131822" />
            <corners android:radius="12dp"/>
        </shape>
    </item>

</layer-list>